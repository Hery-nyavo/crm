@model List<crm_dashboard.Models.Ticket>

@{
    ViewData["Title"] = "Tickets by Priority";
}

<div id="main-wrapper">
    <!-- ============================================================== -->

    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            
            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h4 class="text-themecolor">CRM</h4>
                </div>

                <div class="col-md-7 align-self-center text-right">
                    <div class="d-flex justify-content-end align-items-center">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

            <h2>@ViewData["Title"]</h2>
            <table class="table">
                <thead>
                <tr>
                    <th>Ticket ID</th>
                    <th>Subject</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Amount</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var ticket in ViewBag.TicketData)
                {
                    <tr>
                        <td>@ticket.ticketId</td>
                        <td>@ticket.subject</td>
                        <td>@ticket.status</td>
                        <td>@ticket.priority</td>
                        <td>@ticket.depense</td>
                        <td>@ticket.createdAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>
                            <!-- Update Button -->
                            <a href="@Url.Action("UpdateTicket", "Dashboard", new { ticketId = ticket.ticketId, ticket.priority })" class="btn btn-primary">Update</a>

                            <!-- Delete Button -->
                            <a href="@Url.Action("DeleteTicket", "Dashboard", new { ticketId = ticket.ticketId, ticket.priority })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>

        </div>
        </div>
        </div>
        </div>
        </div>
        </div>
        </div>