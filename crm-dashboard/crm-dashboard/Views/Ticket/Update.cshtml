@model crm_dashboard.Models.Ticket

@{
    ViewData["Title"] = "Update Ticket";
}

<h2>@ViewData["Title"]</h2>

<div id="main-wrapper">
    <!-- ============================================================== -->

    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">

            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h4 class="text-themecolor">CRM</h4>
                </div>

                <div class="col-md-7 align-self-center text-right">
                    <div class="d-flex justify-content-end align-items-center">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                    
                            <form asp-action="UpdateTicket" asp-controller="Dashboard" method="post">
                                <div class="form-group">
                                    <label for="ticketId">Ticket ID</label>
                                    <input type="text" id="ticketId" name="ticketId" class="form-control" value="@Model.ticketId" readonly />
                                </div>

                                <div class="form-group">
                                    <label for="subject">Subject</label>
                                    <input type="text" id="subject" name="subject" class="form-control" value="@Model.subject" readonly />
                                </div>

                                <div class="form-group">
                                    <label for="status">Status</label>
                                    <input type="text" id="status" name="status" class="form-control" value="@Model.status" readonly />
                                </div>

                                <div class="form-group">
                                    <label for="priority">Priority</label>
                                    <input type="text" id="priority" name="priority" class="form-control" value="@Model.priority" readonly/>
                                </div>

                                <div class="form-group">
                                    <label for="amount">Amount</label>
                                    <input type="number" step="any" id="amount" name="depense" class="form-control" value="@Model.depense" />
                                </div>

                                <div class="form-group">
                                    <label for="createdAt">Created At</label>
                                    <input type="text" id="createdAt" name="createdAt" class="form-control" value="@Model.createdAt.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
                                </div>

                                <button type="submit" class="btn btn-success">Update</button>
                            </form>
                    
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>